    "eslint": "^9.21.0",
    "typescript": "5.8.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.14",
    "@vitejs/plugin-react": "^4.3.4",
    "clsx": "^2.1.1",
    "jsdom": "^26.0.0",
    "tsup": "^8.4.0",
    "vitest": "^3.0.7"
